{
  "name": "seed-phrase-hasher",
  "version": "0.0.1",
  "description": "Simple CLI written in NodeJS used to encrypt and decrypt seed phrases using hashes and salt",
  "main": "./src/main.ts",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "start:prod": "npm run build && node ./dist/index.js",
    "publish:prod": "npm run build && npm publish",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Petar-CV/seed-phrase-hasher.git"
  },
  "bin": "./dist/index.js",
  "author": "Petar Cvetko VoÄ‡anec",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Petar-CV/seed-phrase-hasher/issues"
  },
  "homepage": "https://github.com/Petar-CV/seed-phrase-hasher#readme",
  "dependencies": {
    "chalk": "^5.2.0",
    "chalk-animation": "^2.0.3",
    "inquirer": "^9.1.4",
    "nanospinner": "^1.1.0"
  },
  "devDependencies": {
    "@types/chalk-animation": "^1.6.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.15.0",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "*.ts",
    "exec": "ts-node ./src/index.ts",
    "stdin": false
  }
}
